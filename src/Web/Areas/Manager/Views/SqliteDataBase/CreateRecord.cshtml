@using System.Data;
@model DataTable
@{
    ViewBag.Title = "CreateTable";
    Layout = "~/Areas/Manager/Views/Shared/_SqliteLayoutPage.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">添加 @ViewBag.TableName 表记录</h3>
    </div>
    <div class="panel-body">
        <div class="btn-group" data-toggle="buttons-radio">
            <button type="button" class="btn btn-default" onclick="history.back();">返回</button>
        </div>
        <p></p>
        <form class="form-horizontal" role="form" action="" method="post">
            <input type="hidden" name="TableName" id="TableName" value="@ViewBag.TableName" />
            @Html.Partial("_RecordForm", Model)
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">确定</button>
                    <button type="button" class="btn btn-default" onclick="history.back();">返回</button>
                </div>
            </div>
        </form>
    </div>
</div>
