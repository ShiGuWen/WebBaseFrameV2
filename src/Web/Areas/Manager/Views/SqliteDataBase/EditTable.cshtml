@using System.Collections;
@model List<Common.SqliteDBHelper.ColumnInfo>
@{
    ViewBag.Title = "EditTable";
    Layout = "~/Areas/Manager/Views/Shared/_SqliteLayoutPage.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">编辑表 @ViewBag.TableName</h3>
    </div>
    <div class="panel-body">
        <div class="btn-group" data-toggle="buttons-radio">
            <button type="button" class="btn btn-default" onclick="location.href='/Manager/SqliteDataBase/Tables';">返回</button>
        </div>
        <p></p>
        <form class="form-horizontal" role="form" action="" method="post">
            <div class="form-group" style="border-bottom: 1px solid #eee; padding-bottom: 9px;">
                <label class="col-sm-2 control-label">表名</label>
                <div class="col-sm-10">
                    <input type="text" name="TableName" id="TableName" class="form-control" value="@ViewBag.TableName" required="required" />
                    <input type="hidden" name="oldTableName" id="oldTableName" value="@ViewBag.TableName"/>
                </div>
            </div>
            <div class="form-group" style="border-bottom: 1px solid #eee; padding-bottom: 9px;">
                <label class="col-sm-2 control-label">
                    <button id="addColumn" type="button" class="btn btn-success">新增列</button></label>
            </div>
            @Html.Partial("_TableForm", Model)
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">确定</button>
                    <button type="button" class="btn btn-default" onclick="location.href='/Manager/SqliteDataBase/Tables';">返回</button>
                </div>
            </div>
        </form>
    </div>
</div>
