@{
    ViewBag.Title = "ExecuteSQL";
    Layout = "~/Areas/Manager/Views/Shared/_SqliteLayoutPage.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">执行SQL</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" role="form" action="" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    SQL语句
                </label>
                <div class="col-sm-10">
                    <textarea id="SQL" name="SQL" class="form-control" style="resize: none; width: 90%;"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    是否导出
                </label>
                <div class="col-sm-10">
                    <label class="checkbox">
                        <input type="checkbox" id="IsExport" name="IsExport" value="True">是</label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <button type="submit" class="btn btn-danger">执行</button>
                    <button type="button" class="btn btn-default" onclick="location.href='/Manager/SqliteDataBase/Tables';">返回</button>
                </label>
            </div>
            <div class="alert" style="@(ViewBag.Access == "False" ? "display:none;" : "")">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>提示!</strong> @ViewBag.Message
            </div>
        </form>
    </div>
</div>
