@using Libraries;
@model WebBaseFrame.Models.ArticleKind
<input id="ID" name ="ID" type="hidden" value ="@Model.ID" />
<div class="control-group">
    <label class="control-label">排序</label><div class="controls">
        <input id="SortID" name ="SortID" type="text" regex="num" value ="@Model.SortID" required />
    </div>
</div>
<div class="control-group">
    <label class="control-label">父类</label><div class="controls">
        <select id="PID" name="PID" val="@Model.PID" required>
            <option>--请选择--</option>
            @Html.Raw(ViewData["GetParentOption"])
        </select>
    </div>
</div>
<div class="control-group">
    <label class="control-label">名称</label><div class="controls">
        <input id="Name" name ="Name" type="text" value ="@Model.Name" required />
    </div>
</div>
<div class="control-group">
    <label class="control-label">描述</label><div class="controls">
        <input id="Discription" name ="Discription" type="text" value ="@Model.Discription" required />
    </div>
</div>
